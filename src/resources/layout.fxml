<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="sample.Controller">
    <left>
        <VBox spacing="8" style="-fx-background-color:#f4f4f4;">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>

            <Label text="3D Transform Visualizer" style="-fx-font-size:16; -fx-font-weight:bold;" />

            <Separator />

            <!-- SCALE -->
            <HBox spacing="8">
                <CheckBox fx:id="cbScale" text="Scale" selected="true"/>
            </HBox>

            <HBox spacing="8">
                <Label text="sx"/>
                <Slider fx:id="sliderSx" min="0.1" max="5" value="1" prefWidth="150"/>
                <Label fx:id="labelSx" text="1.0"/>
            </HBox>

            <HBox spacing="8">
                <Label text="sy"/>
                <Slider fx:id="sliderSy" min="0.1" max="5" value="1" prefWidth="150"/>
                <Label fx:id="labelSy" text="1.0"/>
            </HBox>

            <HBox spacing="8">
                <Label text="sz"/>
                <Slider fx:id="sliderSz" min="0.1" max="5" value="1" prefWidth="150"/>
                <Label fx:id="labelSz" text="1.0"/>
            </HBox>

            <Separator />

            <!-- ROTATE -->
            <HBox spacing="8">
                <CheckBox fx:id="cbRotate" text="Rotate" />
            </HBox>

            <HBox spacing="8">
                <Label text="rx"/>
                <Slider fx:id="sliderRx" min="-180" max="180" value="0" prefWidth="150"/>
                <Label fx:id="labelRx" text="0°"/>
            </HBox>

            <HBox spacing="8">
                <Label text="ry"/>
                <Slider fx:id="sliderRy" min="-180" max="180" value="0" prefWidth="150"/>
                <Label fx:id="labelRy" text="0°"/>
            </HBox>

            <HBox spacing="8">
                <Label text="rz"/>
                <Slider fx:id="sliderRz" min="-180" max="180" value="0" prefWidth="150"/>
                <Label fx:id="labelRz" text="0°"/>
            </HBox>

            <Separator />

            <!-- SHEAR -->
            <HBox spacing="8">
                <CheckBox fx:id="cbShear" text="Shear"/>
            </HBox>

            <GridPane hgap="6" vgap="6">
                <Label text="shXY" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Slider fx:id="sliderShXY" min="-2" max="2" value="0" prefWidth="150" GridPane.columnIndex="1"/>
                <Label fx:id="labelShXY" text="0" GridPane.columnIndex="2"/>

                <Label text="shXZ" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Slider fx:id="sliderShXZ" min="-2" max="2" value="0" prefWidth="150" GridPane.columnIndex="1"/>
                <Label fx:id="labelShXZ" text="0" GridPane.columnIndex="2"/>

                <Label text="shYX" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Slider fx:id="sliderShYX" min="-2" max="2" value="0" prefWidth="150" GridPane.columnIndex="1"/>
                <Label fx:id="labelShYX" text="0" GridPane.columnIndex="2"/>

                <Label text="shYZ" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Slider fx:id="sliderShYZ" min="-2" max="2" value="0" prefWidth="150" GridPane.columnIndex="1"/>
                <Label fx:id="labelShYZ" text="0" GridPane.columnIndex="2"/>

                <Label text="shZX" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <Slider fx:id="sliderShZX" min="-2" max="2" value="0" prefWidth="150" GridPane.columnIndex="1"/>
                <Label fx:id="labelShZX" text="0" GridPane.columnIndex="2"/>

                <Label text="shZY" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <Slider fx:id="sliderShZY" min="-2" max="2" value="0" prefWidth="150" GridPane.columnIndex="1"/>
                <Label fx:id="labelShZY" text="0" GridPane.columnIndex="2"/>
            </GridPane>

            <Separator />

            <!-- REFLECT -->
            <HBox spacing="8">
                <CheckBox fx:id="cbReflect" text="Reflect"/>
            </HBox>

            <HBox spacing="6">
                <CheckBox fx:id="cbRefX" text="X"/>
                <CheckBox fx:id="cbRefY" text="Y"/>
                <CheckBox fx:id="cbRefZ" text="Z"/>
            </HBox>

            <Separator />

            <!-- TAMBAHKAN UNDO/REDO BUTTONS DI SINI -->
            <HBox spacing="10">
                <Button fx:id="btnUndo" text="Undo" prefWidth="80"/>
                <Button fx:id="btnRedo" text="Redo" prefWidth="80"/>
            </HBox>

            <Separator />

            <HBox spacing="10">
                <Button fx:id="btnReset" text="Reset" prefWidth="100"/>
                <Button fx:id="btnApply" text="Apply" prefWidth="100" style="-fx-font-weight:bold;"/>
            </HBox>

        </VBox>

    </left>

    <center>
        <Canvas fx:id="canvas" width="820" height="760"/>
    </center>
</BorderPane>