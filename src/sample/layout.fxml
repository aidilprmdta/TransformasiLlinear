<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.Controller"
            stylesheets="@style.css">

    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" styleClass="topbar">
            <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
            <Label text="3D Linear Transform Visualizer" styleClass="title"/>
            <HBox HBox.hgrow="ALWAYS"/>
            <Button text="Reset" fx:id="btnReset" styleClass="primary-btn"/>
            <Button text="Undo" fx:id="btnUndo" styleClass="secondary-btn"/>
            <Button text="Redo" fx:id="btnRedo" styleClass="secondary-btn"/>
            <Button text="Apply Transform" fx:id="btnApply" styleClass="apply-btn"/>
        </HBox>
    </top>

    <left>
        <VBox spacing="20" styleClass="sidebar">
            <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

            <!-- SCALE -->
            <VBox spacing="10" styleClass="card">
                <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
                <CheckBox fx:id="cbScale" text="Scale" styleClass="card-title"/>

                <GridPane hgap="10" vgap="10">
                    <Label text="SX:"/>
                    <Slider fx:id="sliderSx" min="0.1" max="5" value="1"/>
                    <Label fx:id="labelSx" text="1"/>

                    <Label text="SY:" GridPane.rowIndex="1"/>
                    <Slider fx:id="sliderSy" min="0.1" max="5" value="1" GridPane.rowIndex="1"/>
                    <Label fx:id="labelSy" text="1" GridPane.rowIndex="1"/>

                    <Label text="SZ:" GridPane.rowIndex="2"/>
                    <Slider fx:id="sliderSz" min="0.1" max="5" value="1" GridPane.rowIndex="2"/>
                    <Label fx:id="labelSz" text="1" GridPane.rowIndex="2"/>
                </GridPane>
            </VBox>

            <!-- ROTATE -->
            <VBox spacing="10" styleClass="card">
                <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
                <CheckBox fx:id="cbRotate" text="Rotate (째)" styleClass="card-title"/>

                <GridPane hgap="10" vgap="10">
                    <Label text="RX:"/>
                    <Slider fx:id="sliderRx" min="-180" max="180" value="0"/>
                    <Label fx:id="labelRx" text="0째"/>

                    <Label text="RY:" GridPane.rowIndex="1"/>
                    <Slider fx:id="sliderRy" min="-180" max="180" value="0" GridPane.rowIndex="1"/>
                    <Label fx:id="labelRy" text="0째" GridPane.rowIndex="1"/>

                    <Label text="RZ:" GridPane.rowIndex="2"/>
                    <Slider fx:id="sliderRz" min="-180" max="180" value="0" GridPane.rowIndex="2"/>
                    <Label fx:id="labelRz" text="0째" GridPane.rowIndex="2"/>
                </GridPane>
            </VBox>

            <!-- SHEAR -->
            <VBox spacing="10" styleClass="card">
                <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

                <CheckBox fx:id="cbShear" text="Shear" styleClass="card-title"/>

                <GridPane hgap="10" vgap="10">
                    <Label text="XY:"/>
                    <Slider fx:id="sliderShXY" min="-2" max="2" value="0"/>
                    <Label fx:id="labelShXY" text="0"/>

                    <Label text="XZ:" GridPane.rowIndex="1"/>
                    <Slider fx:id="sliderShXZ" min="-2" max="2" value="0" GridPane.rowIndex="1"/>
                    <Label fx:id="labelShXZ" text="0" GridPane.rowIndex="1"/>

                    <Label text="YX:" GridPane.rowIndex="2"/>
                    <Slider fx:id="sliderShYX" min="-2" max="2" value="0" GridPane.rowIndex="2"/>
                    <Label fx:id="labelShYX" text="0" GridPane.rowIndex="2"/>

                    <Label text="YZ:" GridPane.rowIndex="3"/>
                    <Slider fx:id="sliderShYZ" min="-2" max="2" value="0" GridPane.rowIndex="3"/>
                    <Label fx:id="labelShYZ" text="0" GridPane.rowIndex="3"/>

                    <Label text="ZX:" GridPane.rowIndex="4"/>
                    <Slider fx:id="sliderShZX" min="-2" max="2" value="0" GridPane.rowIndex="4"/>
                    <Label fx:id="labelShZX" text="0" GridPane.rowIndex="4"/>

                    <Label text="ZY:" GridPane.rowIndex="5"/>
                    <Slider fx:id="sliderShZY" min="-2" max="2" value="0" GridPane.rowIndex="5"/>
                    <Label fx:id="labelShZY" text="0" GridPane.rowIndex="5"/>
                </GridPane>
            </VBox>

            <!-- REFLECT -->
            <VBox spacing="10" styleClass="card">
                <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

                <CheckBox fx:id="cbReflect" text="Reflection" styleClass="card-title"/>

                <VBox spacing="5">
                    <CheckBox fx:id="cbRefX" text="Reflect X"/>
                    <CheckBox fx:id="cbRefY" text="Reflect Y"/>
                    <CheckBox fx:id="cbRefZ" text="Reflect Z"/>
                </VBox>
            </VBox>

        </VBox>
    </left>

    <center>
        <StackPane styleClass="canvas-container">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Canvas fx:id="canvas" width="900" height="650"/>
        </StackPane>
    </center>

</BorderPane>
